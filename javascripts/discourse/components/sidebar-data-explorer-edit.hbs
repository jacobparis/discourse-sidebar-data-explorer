<DModal @title="Show queries" @closeModal={{@closeModal}} class="sidebar-data-explorer-edit-modal">
  <:body>
    <div class="queries-list">
      {{#each @model.queries as |query|}}
        <div class="query-item">
          <label class="checkbox-label">
            <Input
              @type="checkbox"
              @checked={{includes this.selectedQueries query.id}}
              {{on "change" (fn this.toggleQuery query)}}
            />
            <span class="query-name">{{query.name}}</span>
          </label>
        </div>
      {{/each}}
    </div>
  </:body>

  <:footer>
    <DButton
      @class="btn-primary"
      @action={{this.save}}
      @label="save"
    />
    <DModalCancel @close={{@closeModal}} />
  </:footer>
</DModal> 